@{
    ViewData["Title"] = "Kontakt";
}

<div class="d-flex flex-column h-100">

    <div class="border-bottom border-white border-opacity-25 pb-3 mb-5">
        <h2 class="fw-bold">Kontakt</h2>
        <p class="text-white-50 mb-0">Masz pytania dotyczące systemu ocen? Jesteśmy do Twojej dyspozycji.</p>
    </div>

    <div class="col-lg-6 mx-auto d-flex flex-column gap-4">

        <div class="p-4 border border-secondary border-opacity-25 shadow-sm"
             style="background-color: #F9FDF4; border-radius: 15px;">

            <div class="d-flex align-items-center gap-4">
                <div class="flex-shrink-0">
                    <img src="~/images/Logo.png" alt="Logo INeed" style="max-width: 120px; height: auto;">
                </div>
                <div class="d-flex flex-column gap-2 text-dark">
                    <div class="d-flex align-items-center gap-2 fw-bold fs-5">
                        <i class="bi bi-building-fill text-primary"></i>
                        <span>Biuro INeed</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-geo-alt-fill text-primary"></i>
                        <span>al. Kilińskiego 12 p. 8</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-telephone-fill text-primary"></i>
                        <span>661 121 122</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-envelope-fill text-primary"></i>
                        <span>bok@ineed.com</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="p-4 border border-secondary border-opacity-25 shadow-sm"
             style="background-color: #F9FDF4; border-radius: 15px;">

            <h5 class="fw-bold mb-3 text-dark text-center">Formularz prośby usunięcia z Newslettera</h5>

            <form id="unsubscribeForm" asp-action="Unsubscribe" asp-controller="Home" method="post" class="d-flex flex-column align-items-center">

                <div class="mb-3 w-75">
                    <input type="email"
                           name="email"
                           class="form-control bg-white text-dark border-secondary border-opacity-25 text-center"
                           placeholder="adres@poczta.pl"
                           aria-label="Adres email"
                           required>
                </div>

                <button type="button"
                        class="btn w-75 fw-bold py-2"
                        style="background-color: #FF0000; color: #000; border: none; border-radius: 10px;"
                        data-bs-toggle="modal"
                        data-bs-target="#confirmModal">
                    Usuń
                </button>
            </form>
        </div>

    </div>

</div>

<div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 15px; overflow: hidden;">

            <div class="modal-body text-center p-4">
                <h4 class="fw-bold mb-4 text-dark">Czy jesteś pewien/pewna?</h4>

                <div class="d-flex justify-content-center gap-3">

                    <button type="button"
                            class="btn fw-bold px-4 py-2"
                            style="background-color: #76FF03; color: #000; border: none; border-radius: 10px;"
                            onclick="document.getElementById('unsubscribeForm').submit();">
                        Usuń
                    </button>

                    <button type="button" class="btn fw-bold px-4 py-2"
                            style="background-color: #FF0000; color: #000; border: none; border-radius: 10px;"
                            data-bs-dismiss="modal">
                        Wróć
                    </button>

                </div>
            </div>

        </div>
    </div>
</div>