@using INeed.Helpers
@{
    ViewData[AppConstants.Keys.Title] = AppConstants.Texts.Contact.PageTitle;
    var visitorId = AppConstants.GetVisitorId(ViewBag.VisitorId as string);
}

<div class="d-flex flex-column h-100">
    <div class="border-bottom border-white border-opacity-25 pb-3 mb-5">
        <h2 class="fw-bold">@AppConstants.Texts.Contact.Header</h2>
        <p class="text-white-50 mb-0">@AppConstants.Texts.Contact.SubHeader</p>
    </div>

    @if (TempData[AppConstants.Keys.ContactSuccess] != null)
    {
        <div class="col-lg-6 mx-auto mb-4" role="alert">
            <div class="alert alert-success border-0 shadow-sm" style="border-radius: 10px;">@TempData[AppConstants.Keys.ContactSuccess]</div>
        </div>
    }
    @if (TempData[AppConstants.Keys.ContactError] != null)
    {
        <div class="col-lg-6 mx-auto mb-4" role="alert">
            <div class="alert alert-danger border-0 shadow-sm" style="border-radius: 10px;">@TempData[AppConstants.Keys.ContactError]</div>
        </div>
    }

    <div class="col-lg-6 mx-auto d-flex flex-column gap-4">

        @* 1. DANE FIRMY *@
        <section class="p-4 border border-secondary border-opacity-25 shadow-sm" style="background-color: @AppConstants.Colors.BackgroundLight; border-radius: 15px;">
            <div class="d-flex align-items-center gap-4">
                <div class="flex-shrink-0"><img src="~/images/Logo.png" alt="Logo INeed" style="max-width: 120px; height: auto;"></div>
                <div class="d-flex flex-column gap-2 text-dark">
                    <div class="d-flex align-items-center gap-2 fw-bold fs-5">
                        <i class="bi bi-building-fill text-primary" aria-hidden="true"></i><span>@AppConstants.Texts.Contact.OfficeName</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-geo-alt-fill text-primary" aria-hidden="true"></i><span>@AppConstants.Texts.Contact.Address</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-telephone-fill text-primary" aria-hidden="true"></i><span>@AppConstants.Texts.Contact.Phone</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-envelope-fill text-primary" aria-hidden="true"></i><span>@AppConstants.Texts.Contact.Email</span>
                    </div>
                </div>
            </div>
        </section>

        @* 2. FORMULARZ KONTAKTOWY *@
        <section class="p-4 border border-secondary border-opacity-25 shadow-sm" style="background-color: @AppConstants.Colors.BackgroundLight; border-radius: 15px;">
            <h5 class="fw-bold mb-3 text-dark text-center">@AppConstants.Texts.Contact.FormContactHeader</h5>
            <form asp-controller="Home" asp-action="SendMessage" method="post" class="d-flex flex-column align-items-center">

                <input type="hidden" name="visitorId" value="@visitorId" />

                <div class="mb-3 w-75">
                    @* WCAG: Ukryty label *@
                    <label for="contactEmail" class="visually-hidden">@AppConstants.Texts.Labels.YourEmailPlaceholder</label>
                    <input type="email" id="contactEmail" name="email" class="form-control bg-white text-dark border-secondary border-opacity-25" placeholder="@AppConstants.Texts.Labels.YourEmailPlaceholder" required>
                </div>
                <div class="mb-3 w-75">
                    <label for="contactMessage" class="visually-hidden">@AppConstants.Texts.Labels.MessagePlaceholder</label>
                    <textarea id="contactMessage" name="message" class="form-control bg-white text-dark border-secondary border-opacity-25" rows="4" placeholder="@AppConstants.Texts.Labels.MessagePlaceholder" required></textarea>
                </div>

                <div class="mb-4 w-75">
                    <div class="form-check d-flex align-items-start gap-2">
                        <input class="form-check-input mt-1" type="checkbox" id="rodoConsent" name="rodoConsent" value="true" required style="cursor: pointer;">
                        <label class="form-check-label small text-muted lh-sm" for="rodoConsent" style="font-size: 0.8rem; cursor: pointer;">
                            @AppConstants.Texts.Contact.RodoConsent
                            <a href="#" data-bs-toggle="modal" data-bs-target="#privacyModal" class="text-decoration-underline text-primary" aria-label="@AppConstants.Texts.Layout.PrivacyPolicy">
                                @AppConstants.Texts.Layout.PrivacyPolicy
                            </a>.
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn w-auto px-4 fw-bold py-2 shadow-sm" style="background-color: @AppConstants.Colors.ButtonSubmit; color: @AppConstants.Colors.Black; border: none; border-radius: 10px;">
                    @AppConstants.Texts.Buttons.SendMessage
                </button>
            </form>
        </section>

        @* 3. WYSYŁANIE WYNIKÓW *@
        <section class="p-4 border border-secondary border-opacity-25 shadow-sm" style="background-color: @AppConstants.Colors.BackgroundLight; border-radius: 15px;">
            <h5 class="fw-bold mb-3 text-dark text-center">@AppConstants.Texts.Contact.ResultsHeader</h5>
            <p class="text-muted text-center small mb-3">@AppConstants.Texts.Contact.ResultsSubHeader</p>

            <form asp-action="SendAllResults" asp-controller="Home" method="post" class="d-flex flex-column align-items-center">
                <input type="hidden" name="visitorId" value="@visitorId" />

                <div class="mb-3 w-75">
                    <label for="resultsEmail" class="visually-hidden">@AppConstants.Texts.Labels.YourEmailPlaceholder</label>
                    <input type="email" id="resultsEmail" name="email" class="form-control bg-white text-dark border-secondary border-opacity-25" placeholder="@AppConstants.Texts.Labels.YourEmailPlaceholder" required>
                </div>

                <button type="submit" class="btn w-auto px-4 fw-bold py-2 shadow-sm" style="background-color: @AppConstants.Colors.ButtonAction; color: @AppConstants.Colors.Black; border: none; border-radius: 10px;">
                    @AppConstants.Texts.Buttons.SendResults
                </button>
            </form>
        </section>

        @* 4. USUWANIE DANYCH *@
        <section class="p-4 border border-secondary border-opacity-25 shadow-sm" style="background-color: @AppConstants.Colors.BackgroundLight; border-radius: 15px;">
            <h5 class="fw-bold mb-3 text-dark text-center">@AppConstants.Texts.Contact.FormUnsubscribeHeader</h5>

            <form id="deleteDataForm" asp-action="DeleteData" asp-controller="Home" method="post" class="d-flex flex-column align-items-center">
                <input type="hidden" name="visitorId" value="@visitorId" />

                <div class="mb-3 text-center text-muted">
                    <small>@AppConstants.Texts.Contact.DeleteIdLabel<br><strong>@visitorId</strong></small>
                </div>

                <button type="button" class="btn w-auto px-4 fw-bold py-2" style="background-color: @AppConstants.Colors.ButtonDanger; color: @AppConstants.Colors.Black; border: none; border-radius: 10px;" data-bs-toggle="modal" data-bs-target="#confirmModal">
                    @AppConstants.Texts.Buttons.Delete
                </button>
            </form>
        </section>
    </div>
</div>

<div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true" aria-labelledby="confirmModalLabel">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 15px; overflow: hidden;">
            <div class="modal-body text-center p-4">
                <h4 id="confirmModalLabel" class="fw-bold mb-4 text-dark">@AppConstants.Texts.Contact.ModalTitle</h4>
                <div class="d-flex justify-content-center gap-3">
                    <button type="button" class="btn fw-bold px-4 py-2" style="background-color: @AppConstants.Colors.ButtonAction; color: @AppConstants.Colors.Black; border: none; border-radius: 10px;" onclick="document.getElementById('deleteDataForm').submit();">
                        @AppConstants.Texts.Buttons.Delete
                    </button>
                    <button type="button" class="btn fw-bold px-4 py-2" style="background-color: @AppConstants.Colors.ButtonDanger; color: @AppConstants.Colors.Black; border: none; border-radius: 10px;" data-bs-dismiss="modal">
                        @AppConstants.Texts.Buttons.Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>