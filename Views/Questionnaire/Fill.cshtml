@using INeed.Helpers
@using System.Globalization
@model INeed.Models.Form
@{
    var txt = AppConstants.Texts;

    var title = AppConstants.SelectContent(Model.Title, Model.TitleEN);
    ViewData[AppConstants.Keys.Title] = title;
    var descLong = AppConstants.SelectContent(Model.DecryptionLong, Model.DecryptionLongEN);
    var descShort = AppConstants.SelectContent(Model.DecryptionShort, Model.DecryptionShortEN);
    var finalDesc = !string.IsNullOrEmpty(descLong) ? descLong : descShort;
    string visitorId = AppConstants.GetVisitorId(ViewBag.VisitorId as string);
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            @* WCAG: Kontener na błędy (zamiast alert()) *@
            <div id="validation-summary" class="alert alert-danger mb-4 shadow-sm" role="alert" style="display:none; border-radius: 10px;" tabindex="-1">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> <span id="validation-message"></span>
            </div>

            <div class="d-flex justify-content-between align-items-start mb-5 w-100"
                 style="color: @AppConstants.Colors.TextMain !important; border-bottom: 1px solid @AppConstants.Colors.BorderTransparent; padding-bottom: 20px;">

                <div style="text-align: left !important; flex: 1;">
                    <h1 class="fw-bold text-uppercase mb-2 h2" style="color: @AppConstants.Colors.TextMain !important; margin: 0;">@title</h1>
                    <p class="lead mb-0" style="font-size: 1.05rem; opacity: 0.85; color: @AppConstants.Colors.TextMain !important;">@finalDesc</p>
                </div>

                <div id="page-counter" class="text-end ps-4" style="min-width: 120px;" aria-live="polite">
                    <div class="fw-bold" style="color: @AppConstants.Colors.TextHighlight !important; font-size: 1.4rem; line-height: 1;">
                        <span id="current-page">1</span> <span aria-hidden="true">/</span> <span class="visually-hidden">z</span> <span id="total-pages">1</span>
                    </div>
                    <small class="text-uppercase" style="color: @AppConstants.Colors.TextMain; font-size: 0.7rem; letter-spacing: 1px; opacity: 0.6;">@txt.Fill.Page</small>
                </div>
            </div>

            <form id="questionnaireForm" method="post" asp-action="Fill" asp-route-kw="@Model.Id" asp-route-id="@visitorId">
                <input type="hidden" name="id" value="@visitorId" />

                <fieldset class="card mb-4 border-0 shadow-sm" style="border-radius: 10px; background-color: @AppConstants.Colors.BackgroundLight;">
                    <legend class="visually-hidden">@txt.Labels.GenderSelectionTitle</legend>

                    <div class="card-body p-4">
                        <div class="fw-bold mb-3 text-dark h5" aria-hidden="true">@txt.Labels.GenderSelectionTitle</div>
                        <p class="text-muted small mb-3">@txt.Labels.GenderSelectionInfo</p>

                        <div class="d-flex flex-wrap gap-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="isMale" id="genderF" value="false" style="transform: scale(1.2);">
                                <label class="form-check-label fw-bold ms-1" for="genderF">@txt.Labels.Woman</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="isMale" id="genderM" value="true" style="transform: scale(1.2);">
                                <label class="form-check-label fw-bold ms-1" for="genderM">@txt.Labels.Man</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="isMale" id="genderN" value="" checked style="transform: scale(1.2);">
                                <label class="form-check-label fw-bold ms-1" for="genderN">@txt.Labels.DontSpecify</label>
                            </div>
                        </div>
                    </div>
                </fieldset>

                @if (Model.Questions != null && Model.Questions.Any())
                {
                    <div id="questions-container">
                        @foreach (var question in Model.Questions.OrderBy(q => q.Number))
                        {
                            <fieldset class="card mb-4 border-0 shadow-sm question-card" style="border-radius: 10px; background-color: @AppConstants.Colors.BackgroundLight;">
                                <legend class="visually-hidden">
                                    Pytanie @question.Number: @AppConstants.SelectContent(question.Query, question.QueryEN)
                                </legend>

                                <div class="card-body p-4">
                                    <div class="fw-bold mb-4 text-dark h5 w-100" aria-hidden="true">
                                        <span class="badge bg-secondary me-2">@question.Number</span>
                                        @AppConstants.SelectContent(question.Query, question.QueryEN)
                                    </div>

                                    @* WERSJA DESKTOP *@
                                    <div class="d-none d-md-flex flex-row flex-nowrap gap-2 justify-content-between answers-wrapper overflow-auto pb-2" role="radiogroup">
                                        @foreach (var answer in question.Answers.OrderBy(a => a.Order))
                                        {
                                            var answerText = AppConstants.SelectContent(answer.Reply, answer.ReplyEN);
                                            <div class="flex-grow-1">
                                                <input type="radio" class="btn-check"
                                                       name="Question_@question.QuestionId"
                                                       id="Answer_@answer.AnswerId"
                                                       value="@answer.AnswerId"
                                                       aria-label="@answerText">

                                                <label class="btn text-white fw-bold w-100 shadow-sm d-flex align-items-center justify-content-center focus-ring"
                                                       for="Answer_@answer.AnswerId"
                                                       style="background-color: @answer.Color; border: 1px solid @answer.Color; min-height: 60px; font-size: 0.9rem;">
                                                    @answerText
                                                </label>
                                            </div>
                                        }
                                    </div>

                                    @* WERSJA MOBILE *@
                                    <div class="d-md-none mt-2 position-relative">
                                        <div class="input-group">
                                            <label for="Select_@question.QuestionId" class="visually-hidden">
                                                @txt.Fill.SelectOption
                                            </label>

                                            <select class="form-select shadow-sm p-3 text-dark mobile-select"
                                                    id="Select_@question.QuestionId"
                                                    name="Question_@question.QuestionId"
                                                    style="border-radius: 10px 0 0 10px; border: 1px solid #dee2e6; height: auto;">
                                                <option value="" selected disabled>@txt.Fill.SelectOption</option>
                                                @foreach (var answer in question.Answers.OrderBy(a => a.Order))
                                                {
                                                    <option value="@answer.AnswerId">
                                                        @AppConstants.SelectContent(answer.Reply, answer.ReplyEN)
                                                    </option>
                                                }
                                            </select>
                                            <span class="input-group-text bg-white border-start-0"
                                                  style="border-radius: 0 10px 10px 0; border: 1px solid #dee2e6;">
                                                <i class="bi bi-exclamation-circle-fill text-danger status-icon fs-4" aria-hidden="true"></i>
                                            </span>
                                        </div>
                                    </div>

                                </div>
                            </fieldset>
                        }
                    </div>

                    <div class="mt-5 d-flex gap-3">
                        <button type="button" id="btn-prev" class="btn btn-secondary fw-bold py-3 shadow-sm" style="border-radius: 10px; font-size: 1.1rem; display: none; width: 150px;">
                            <span aria-hidden="true">&larr;</span> @txt.Buttons.Back
                        </button>
                        <button type="button" id="btn-next" class="btn fw-bold py-3 shadow-sm flex-grow-1" style="background-color: @AppConstants.Colors.ButtonAction; color: @AppConstants.Colors.Black; border: none; border-radius: 10px; font-size: 1.1rem;">
                            @txt.Buttons.Continue <span aria-hidden="true">&rarr;</span>
                        </button>
                        <button type="submit" id="btn-submit" class="btn fw-bold py-3 shadow-sm flex-grow-1" style="background-color: @AppConstants.Colors.ButtonSubmit; color: @AppConstants.Colors.Black; border-radius: 10px; font-size: 1.1rem; display: none;">
                            @txt.Buttons.SendAnswers <span aria-hidden="true">&rarr;</span>
                        </button>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">@txt.Fill.NoQuestions</div>
                }
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const inputs = document.querySelectorAll('.btn-check');
            inputs.forEach(input => {
                input.addEventListener('change', function() {
                    const wrapper = this.closest('.answers-wrapper');
                    if (wrapper) wrapper.classList.add('answered');
                });
            });

            const selects = document.querySelectorAll('select.mobile-select');
            selects.forEach(select => {
                const updateStyle = () => {
                    const colorActive = '@AppConstants.Colors.ActiveNav';
                    const colorBorderDefault = '@AppConstants.Colors.BorderDefault';
                    const colorBgActive = '@AppConstants.Colors.InputBackgroundActive';
                    const colorBgDefault = '@AppConstants.Colors.White';
                    const container = select.closest('.input-group');
                    const icon = container.querySelector('.status-icon');
                    const addon = container.querySelector('.input-group-text');

                    if (select.value) {
                        select.style.borderColor = colorActive;
                        select.style.borderWidth = '2px';
                        select.style.backgroundColor = colorBgActive;
                        select.classList.add('fw-bold');
                        addon.style.borderColor = colorActive;
                        addon.style.borderWidth = '2px';
                        addon.style.borderLeft = '0';
                        icon.className = 'bi bi-check-circle-fill status-icon fs-4';
                        icon.style.color = colorActive;
                    } else {
                        select.style.borderColor = colorBorderDefault;
                        select.style.borderWidth = '1px';
                        select.style.backgroundColor = colorBgDefault;
                        select.classList.remove('fw-bold');
                        addon.style.borderColor = colorBorderDefault;
                        addon.style.borderWidth = '1px';
                        icon.className = 'bi bi-exclamation-circle-fill text-danger status-icon fs-4';
                        icon.style.color = '';
                    }
                };
                select.addEventListener('change', updateStyle);
                updateStyle();
            });

            // LOGIKA PAGINACJI I FOCUSU
            const questions = document.querySelectorAll('.question-card');
            const itemsPerPage = 5;
            let currentPage = 1;
            const totalPages = Math.ceil(questions.length / itemsPerPage);

            const pageCountSpan = document.getElementById('current-page');
            const totalPagesSpan = document.getElementById('total-pages');
            const btnNext = document.getElementById('btn-next');
            const btnPrev = document.getElementById('btn-prev');
            const btnSubmit = document.getElementById('btn-submit');

            // Elementy błędów
            const errorSummary = document.getElementById('validation-summary');
            const errorMessage = document.getElementById('validation-message');

            if(totalPagesSpan) totalPagesSpan.innerText = totalPages;

            function validatePage(page) {
                const start = (page - 1) * itemsPerPage;
                const end = start + itemsPerPage;
                let isValid = true;

                // Ukryj błąd przy ponownej walidacji
                if(errorSummary) errorSummary.style.display = 'none';

                for (let i = start; i < end; i++) {
                    if (questions[i]) {
                        const select = questions[i].querySelector('select');
                        if (select && select.offsetParent !== null) {
                            if (!select.value) isValid = false;
                        }
                        else {
                            const checked = questions[i].querySelector('input[type="radio"]:checked');
                            if (!checked) isValid = false;
                        }
                    }
                }
                return isValid;
            }

            function showError(msg) {
                if(errorMessage) errorMessage.innerText = msg;
                if(errorSummary) {
                    errorSummary.style.display = 'block';
                    errorSummary.focus(); // WCAG: Przenieś focus na błąd
                    // Scroll do błędu
                    errorSummary.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
            }

            function showPage(page) {
                // 1. Ukryj wszystkie
                questions.forEach(q => q.style.display = 'none');
                // 2. Pokaż właściwe
                const start = (page - 1) * itemsPerPage;
                const end = start + itemsPerPage;
                for (let i = start; i < end; i++) {
                    if (questions[i]) questions[i].style.display = 'block';
                }

                if(pageCountSpan) pageCountSpan.innerText = page;

                // 3. Przewiń do góry (jeśli nie ma błędu)
                if(errorSummary.style.display === 'none') {
                     window.scrollTo({ top: 0, behavior: 'smooth' });
                }

                // 4. Focus na pierwsze pytanie (tylko jeśli zmieniamy stronę, a nie przy błędzie)
                 const firstNewQuestion = questions[start];
                if (firstNewQuestion) {
                    let targetInput = firstNewQuestion.querySelector('input[type="radio"]');
                    if (targetInput && targetInput.offsetParent === null) {
                         targetInput = firstNewQuestion.querySelector('select');
                    }
                    if (targetInput) {
                        setTimeout(() => {
                           targetInput.focus({ preventScroll: true });
                        }, 300);
                    }
                }

                if(btnPrev) btnPrev.style.display = (page > 1) ? 'block' : 'none';
                if (page === totalPages) {
                    if(btnNext) btnNext.style.display = 'none';
                    if(btnSubmit) btnSubmit.style.display = 'block';
                } else {
                    if(btnNext) btnNext.style.display = 'block';
                    if(btnSubmit) btnSubmit.style.display = 'none';
                }
            }

            if(btnNext) btnNext.addEventListener('click', function () {
                if (validatePage(currentPage)) {
                    if (currentPage < totalPages) { currentPage++; showPage(currentPage); }
                } else {
                    // WCAG: Zastąpienie alert()
                    showError(@Json.Serialize(txt.Fill.AlertPage));
                }
            });

            if(btnPrev) btnPrev.addEventListener('click', function () {
                // Ukryj błąd przy cofaniu
                if(errorSummary) errorSummary.style.display = 'none';
                if (currentPage > 1) { currentPage--; showPage(currentPage); }
            });

            const form = document.getElementById('questionnaireForm');
            if(form) {
                form.addEventListener('submit', function(e) {
                    if (!validatePage(currentPage)) {
                        e.preventDefault();
                        showError(@Json.Serialize(txt.Fill.AlertAll));
                        return;
                    }
                });
            }

            if(questions.length > 0) showPage(1);
        });
    </script>
}

<style>
    /* WCAG Focus Styles */
    .btn-check:focus-visible + .btn,
    .form-select:focus-visible,
    .form-check-input:focus-visible,
    .btn:focus-visible {
        outline: 3px solid @AppConstants.Colors.FocusOutline !important;
        outline-offset: 2px;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .btn-check:checked + .btn {
        box-shadow: 0 0 0 0.25rem rgba(0, 0, 0, 0.5) !important;
        z-index: 10;
        border-color: @AppConstants.Colors.Black !important;
        filter: brightness(110%);
    }

    .answers-wrapper.answered .btn-check:not(:checked) + .btn {
        background-color: @AppConstants.Colors.Black !important;
        border-color: @AppConstants.Colors.Black !important;
        color: #fff !important;
        opacity: 1 !important;
    }
</style>