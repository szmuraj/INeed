@using INeed.Helpers
@using System.Globalization
@model INeed.Models.Form
@{
    var isEn = CultureInfo.CurrentUICulture.Name.StartsWith("en");
    var title = (isEn && !string.IsNullOrEmpty(Model.TitleEN)) ? Model.TitleEN : Model.Title;
    ViewData[AppConstants.Keys.Title] = title;

    var descLong = (isEn && !string.IsNullOrEmpty(Model.DecryptionLongEN)) ? Model.DecryptionLongEN : Model.DecryptionLong;
    var descShort = (isEn && !string.IsNullOrEmpty(Model.DecryptionShortEN)) ? Model.DecryptionShortEN : Model.DecryptionShort;
    var finalDesc = !string.IsNullOrEmpty(descLong) ? descLong : descShort;

    string visitorId = ViewBag.VisitorId as string ?? "000000";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="d-flex justify-content-between align-items-start mb-5 w-100"
                 style="color: #D9D9D9 !important; border-bottom: 1px solid rgba(217,217,217,0.1); padding-bottom: 20px;">
                <div style="text-align: left !important; flex: 1;">
                    <h2 class="fw-bold text-uppercase mb-2" style="color: #D9D9D9 !important; margin: 0;">
                        @title
                    </h2>
                    <p class="lead mb-0" style="font-size: 1.05rem; opacity: 0.85; color: #D9D9D9 !important;">
                        @finalDesc
                    </p>
                </div>
                <div id="page-counter" class="text-end ps-4" style="min-width: 120px;">
                    <div class="fw-bold" style="color: #76FF03 !important; font-size: 1.4rem; line-height: 1;">
                        <span id="current-page">1</span> / <span id="total-pages">1</span>
                    </div>
                    <small class="text-uppercase" style="color: #D9D9D9; font-size: 0.7rem; letter-spacing: 1px; opacity: 0.6;">
                        @(isEn ? "Page" : "Strona")
                    </small>
                </div>
            </div>

            @* ZMIANA: asp-route-kw zamiast id *@
            <form id="questionnaireForm" method="post" asp-action="Fill" asp-route-kw="@Model.Id">
                <input type="hidden" name="visitorId" value="@visitorId" />

                <div class="card mb-4 border-0 shadow-sm" style="border-radius: 10px; background-color: #f8f9fa;">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3 text-dark">@(isEn ? "Select your gender:" : "Wybierz swoją płeć:")</h5>
                        <p class="text-muted small mb-3">@(isEn ? "This selection affects result norms. Choose 'Don't specify' to see norms for both genders." : "Wybór ma wpływ na normy. Wybierz 'Nie podaję', aby zobaczyć wyniki dla obu płci.")</p>

                        <div class="d-flex flex-wrap gap-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="genderF" value="F" style="transform: scale(1.2);">
                                <label class="form-check-label fw-bold ms-1" for="genderF">
                                    @(isEn ? "Female" : "Kobieta")
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="genderM" value="M" style="transform: scale(1.2);">
                                <label class="form-check-label fw-bold ms-1" for="genderM">
                                    @(isEn ? "Male" : "Mężczyzna")
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="genderN" value="N" checked style="transform: scale(1.2);">
                                <label class="form-check-label fw-bold ms-1" for="genderN">
                                    @(isEn ? "Don't specify (Show both)" : "Nie podaję (Pokaż oba wyniki)")
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Questions != null && Model.Questions.Any())
                {
                    <div id="questions-container">
                        @foreach (var question in Model.Questions.OrderBy(q => q.Number))
                        {
                            <div class="card mb-4 border-0 shadow-sm question-card" style="border-radius: 10px; background-color: @AppConstants.Colors.BackgroundLight;">
                                <div class="card-body p-4">
                                    <h5 class="fw-bold mb-4 text-dark">
                                        <span class="badge bg-secondary me-2">@question.Number</span>
                                        @(isEn && !string.IsNullOrEmpty(question.QueryEN) ? question.QueryEN : question.Query)
                                    </h5>

                                    <div class="d-flex flex-row flex-nowrap gap-2 justify-content-between answers-wrapper overflow-auto pb-2">
                                        @foreach (var answer in question.Answers.OrderBy(a => a.Order))
                                        {
                                            <div class="flex-grow-1">
                                                <input type="radio" class="btn-check" name="Question_@question.QuestionId" id="Answer_@answer.AnswerId" value="@answer.AnswerId">
                                                <label class="btn text-white fw-bold w-100 shadow-sm d-flex align-items-center justify-content-center"
                                                       for="Answer_@answer.AnswerId"
                                                       style="background-color: @answer.Color; border: 1px solid @answer.Color; min-height: 60px; font-size: 0.9rem;">
                                                    @(isEn && !string.IsNullOrEmpty(answer.ReplyEN) ? answer.ReplyEN : answer.Reply)
                                                </label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="mt-5 d-flex gap-3">
                        <button type="button" id="btn-prev" class="btn btn-secondary fw-bold py-3 shadow-sm"
                                style="border-radius: 10px; font-size: 1.1rem; display: none; width: 150px;">
                            &larr; @(isEn ? "Back" : AppConstants.Texts.Buttons.Back)
                        </button>
                        <button type="button" id="btn-next" class="btn fw-bold py-3 shadow-sm flex-grow-1"
                                style="background-color: @AppConstants.Colors.ButtonAction; color: @AppConstants.Colors.Black; border: none; border-radius: 10px; font-size: 1.1rem;">
                            @(isEn ? "Continue" : AppConstants.Texts.Buttons.Continue) &rarr;
                        </button>
                        <button type="submit" id="btn-submit" class="btn fw-bold py-3 shadow-sm flex-grow-1"
                                style="background-color: @AppConstants.Colors.ButtonSubmit; color: @AppConstants.Colors.Black; border-radius: 10px; font-size: 1.1rem; display: none;">
                            @(isEn ? "Send Answers" : AppConstants.Texts.Buttons.SendAnswers) &rarr;
                        </button>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        @(isEn ? "No questions available." : AppConstants.Texts.Fill.NoQuestions)
                    </div>
                }
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const inputs = document.querySelectorAll('.btn-check');
            inputs.forEach(input => {
                input.addEventListener('change', function() {
                    const wrapper = this.closest('.answers-wrapper');
                    if (wrapper) wrapper.classList.add('answered');
                });
            });

            const questions = document.querySelectorAll('.question-card');
            const itemsPerPage = 5;
            let currentPage = 1;
            const totalPages = Math.ceil(questions.length / itemsPerPage);

            const pageCountSpan = document.getElementById('current-page');
            const totalPagesSpan = document.getElementById('total-pages');
            const btnNext = document.getElementById('btn-next');
            const btnPrev = document.getElementById('btn-prev');
            const btnSubmit = document.getElementById('btn-submit');

            if(totalPagesSpan) totalPagesSpan.innerText = totalPages;

            function validatePage(page) {
                const start = (page - 1) * itemsPerPage;
                const end = start + itemsPerPage;
                for (let i = start; i < end; i++) {
                    if (questions[i]) {
                        const checked = questions[i].querySelector('input[type="radio"]:checked');
                        if (!checked) return false;
                    }
                }
                return true;
            }

            function showPage(page) {
                questions.forEach(q => q.style.display = 'none');
                const start = (page - 1) * itemsPerPage;
                const end = start + itemsPerPage;
                for (let i = start; i < end; i++) {
                    if (questions[i]) questions[i].style.display = 'block';
                }
                if(pageCountSpan) pageCountSpan.innerText = page;
                window.scrollTo({ top: 0, behavior: 'smooth' });

                if(btnPrev) btnPrev.style.display = (page > 1) ? 'block' : 'none';
                if (page === totalPages) {
                    if(btnNext) btnNext.style.display = 'none';
                    if(btnSubmit) btnSubmit.style.display = 'block';
                } else {
                    if(btnNext) btnNext.style.display = 'block';
                    if(btnSubmit) btnSubmit.style.display = 'none';
                }
            }

            if(btnNext) btnNext.addEventListener('click', function () {
                if (validatePage(currentPage)) {
                    if (currentPage < totalPages) {
                        currentPage++;
                        showPage(currentPage);
                    }
                } else {
                    alert("@(isEn ? "Please answer all questions on this page." : AppConstants.Texts.Fill.AlertPage)");
                }
            });

            if(btnPrev) btnPrev.addEventListener('click', function () {
                if (currentPage > 1) {
                    currentPage--;
                    showPage(currentPage);
                }
            });

            const form = document.getElementById('questionnaireForm');
            if(form) {
                form.addEventListener('submit', function(e) {
                    if (!validatePage(currentPage)) {
                        e.preventDefault();
                        alert("@(isEn ? "Please answer all questions before sending." : AppConstants.Texts.Fill.AlertAll)");
                    }
                });
            }

            if(questions.length > 0) showPage(1);
        });
    </script>
}

<style>
    .btn-check:checked + .btn {
        box-shadow: 0 0 0 0.25rem rgba(0, 0, 0, 0.5) !important;
        transform: scale(1.05);
        z-index: 10;
        border-color: @AppConstants.Colors.Black !important;
        filter: brightness(110%);
    }

    .answers-wrapper.answered .btn-check:not(:checked) + .btn {
        background-color: @AppConstants.Colors.Black !important;
        border-color: @AppConstants.Colors.Black !important;
        color: #fff !important;
        opacity: 1 !important;
    }
</style>