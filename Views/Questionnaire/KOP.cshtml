@model List<INeed.Models.Question>

<div class="container-fluid py-4">
    <div class="mb-5">
        <h2 class="text-white mb-2">Kwestionariusz oceny potrzeb</h2>
        <p class="text-secondary" style="max-width: 800px;">
            Kwestionariusz oceny potrzeb w skrócie KOP składa się z @Model.Count pytań,
            w których należy wybrać jak bardzo zgadzamy się z danym stwierdzeniem.
        </p>
    </div>

    <form asp-action="SubmitKOP" method="post">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="mb-5 pb-3 border-bottom border-secondary border-opacity-25">
                <h4 class="mb-3 text-white">@((i + 1)). @Model[i].Query</h4>

                <input type="hidden" name="[@i].QuestionId" value="@Model[i].QuestionId" />

                <div class="row g-2">

                    <div class="col-12 col-lg">
                        <input type="radio" class="btn-check" name="[@i].Score" id="q@(i)_1" value="1" required>
                        <label class="btn-answer tile-red" for="q@(i)_1">
                            Zupełnie się nie zgadzam.
                        </label>
                    </div>

                    <div class="col-12 col-lg">
                        <input type="radio" class="btn-check" name="[@i].Score" id="q@(i)_2" value="2">
                        <label class="btn-answer tile-red-light" for="q@(i)_2">
                            Nie zgadzam się.
                        </label>
                    </div>

                    <div class="col-12 col-lg">
                        <input type="radio" class="btn-check" name="[@i].Score" id="q@(i)_3" value="3">
                        <label class="btn-answer tile-gray" for="q@(i)_3">
                            Trudno powiedzieć.
                        </label>
                    </div>

                    <div class="col-12 col-lg">
                        <input type="radio" class="btn-check" name="[@i].Score" id="q@(i)_4" value="4">
                        <label class="btn-answer tile-green-light" for="q@(i)_4">
                            Zgadzam się.
                        </label>
                    </div>

                    <div class="col-12 col-lg">
                        <input type="radio" class="btn-check" name="[@i].Score" id="q@(i)_5" value="5">
                        <label class="btn-answer tile-green" for="q@(i)_5">
                            Całkowicie się zgadzam.
                        </label>
                    </div>
                </div>
            </div>
        }

        <div class="d-flex justify-content-end mt-4 mb-5">
            <button type="submit" class="btn btn-continue btn-lg px-5 py-2">
                KONTYNUUJ
            </button>
        </div>
    </form>
</div>
