@using INeed.Helpers
@using System.Globalization
@model INeed.Models.ViewModels.FinalResultVm

@{
    ViewData[AppConstants.Keys.Title] = Model.FormTitle;
    var isEn = CultureInfo.CurrentUICulture.Name.StartsWith("en");
}

<div class="container py-5">
    @if (TempData[AppConstants.Keys.SuccessMessage] != null)
    {
        <div class="row justify-content-center mb-4"><div class="col-lg-8"><div class="alert alert-success border-0 shadow-sm text-center" style="border-radius: 10px;">@TempData[AppConstants.Keys.SuccessMessage]</div></div></div>
    }
    @if (TempData[AppConstants.Keys.ErrorMessage] != null)
    {
        <div class="row justify-content-center mb-4"><div class="col-lg-8"><div class="alert alert-danger border-0 shadow-sm text-center" style="border-radius: 10px;">@TempData[AppConstants.Keys.ErrorMessage]</div></div></div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">

            <div class="card shadow-lg border-0 p-5 mb-5" style="border-radius: 20px;">
                <h2 class="fw-bold mb-4">
                    @AppConstants.Texts.Result.Header: @Model.FormTitle
                </h2>
                <p class="text-muted mb-5">
                    @AppConstants.Texts.Result.SubHeader
                </p>

                @if (!Model.Categories.Any())
                {
                    <div class="alert alert-warning">
                        @(isEn ? "No data. Check if questions have categories assigned." : "Brak danych. Sprawdź czy pytania mają przypisane kategorie.")
                    </div>
                }

                @foreach (var cat in Model.Categories)
                {
                    <div class="mb-5 text-start">
                        <div class="d-flex justify-content-between align-items-end mb-2">
                            <span class="text-uppercase fw-bold" style="font-size: 1rem; color: #333;">@cat.CategoryName</span>
                            <span class="fw-bold fs-5">@cat.ScoreObtained <span class="text-muted fs-6 fw-normal">/ @cat.ScoreMax</span></span>
                        </div>

                        <div class="progress mb-3" style="height: 15px; border-radius: 8px; background-color: #f0f0f0;">
                            <div class="progress-bar" role="progressbar" style="width: @cat.Percent.ToString("0", CultureInfo.InvariantCulture)%; background-color: @cat.Color; border-radius: 8px;"></div>
                        </div>

                        <div class="row g-2">
                            <div class="col-6">
                                <div class="p-3 border rounded bg-light text-center h-100">
                                    <small class="text-uppercase text-muted d-block mb-1" style="font-size: 0.7rem; letter-spacing: 1px;">
                                        @(isEn ? "Woman" : "Kobieta")
                                    </small>
                                    <div class="fw-bold text-dark fs-5 mb-0">STEN: @cat.StenFemale</div>
                                    <small class="d-block mt-1 text-primary fw-bold">@cat.DescFemale</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3 border rounded bg-light text-center h-100">
                                    <small class="text-uppercase text-muted d-block mb-1" style="font-size: 0.7rem; letter-spacing: 1px;">
                                        @(isEn ? "Man" : "Mężczyzna")
                                    </small>
                                    <div class="fw-bold text-dark fs-5 mb-0">STEN: @cat.StenMale</div>
                                    <small class="d-block mt-1 text-primary fw-bold">@cat.DescMale</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="card shadow-sm border-0 p-5" style="border-radius: 20px; background-color: @AppConstants.Colors.BackgroundLight;">
                <h4 class="fw-bold mb-3">
                    @AppConstants.Texts.Result.SaveHeader
                </h4>
                <p class="text-muted mb-4">
                    @AppConstants.Texts.Result.SaveSubHeader
                </p>

                <form asp-action="SendResult" asp-controller="Questionnaire" method="post" class="d-flex flex-column align-items-center">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="FormTitle" />

                    @for (int i = 0; i < Model.Categories.Count; i++)
                    {
                        <input type="hidden" asp-for="Categories[i].CategoryName" />
                        <input type="hidden" asp-for="Categories[i].CategoryCode" />
                        <input type="hidden" asp-for="Categories[i].Color" />
                        <input type="hidden" asp-for="Categories[i].ScoreObtained" />
                        <input type="hidden" asp-for="Categories[i].ScoreMax" />
                        <input type="hidden" asp-for="Categories[i].StenFemale" />
                        <input type="hidden" asp-for="Categories[i].DescFemale" />
                        <input type="hidden" asp-for="Categories[i].StenMale" />
                        <input type="hidden" asp-for="Categories[i].DescMale" />
                    }

                    <div class="mb-3 w-75">
                        <input type="email" name="email" class="form-control bg-white text-dark border-secondary border-opacity-25 text-center"
                               placeholder="@AppConstants.Texts.Labels.EmailPlaceholder" required>
                    </div>

                    <div class="mb-4 w-75 text-start">
                        <div class="form-check d-flex align-items-start gap-2">
                            <input class="form-check-input mt-1" type="checkbox" id="rodoConsent" name="rodoConsent" value="true" required style="cursor: pointer;">
                            <label class="form-check-label small text-muted lh-sm" for="rodoConsent" style="font-size: 0.8rem; cursor: pointer;">
                                @AppConstants.Texts.Result.RodoConsent
                                <a asp-controller="Home" asp-action="Privacy" target="_blank" class="text-decoration-underline text-primary">
                                    @AppConstants.Texts.Layout.PrivacyPolicy
                                </a>
                                @AppConstants.Texts.Result.And
                                <a asp-controller="Home" asp-action="Terms" target="_blank" class="text-decoration-underline text-primary">
                                    @AppConstants.Texts.Layout.Terms
                                </a>
                                @AppConstants.Texts.Result.AcceptTerms
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn w-75 fw-bold py-2 mb-2 shadow-sm"
                            style="background-color: @AppConstants.Colors.Primary; color: #fff; border: none; border-radius: 10px;">
                        @AppConstants.Texts.Buttons.SendResults
                    </button>
                </form>
            </div>

            <div class="mt-5">
                <a asp-controller="Home" asp-action="Index"
                   class="btn fw-bold px-5 py-3 shadow-sm"
                   style="background-color: @AppConstants.Colors.Primary; color: #fff; border-radius: 10px;">
                    @AppConstants.Texts.Buttons.BackToHome
                </a>
            </div>
        </div>
    </div>
</div>